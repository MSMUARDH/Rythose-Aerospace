@using System.Text.Json;
@using Utility;
@model Models.Aircraft
@{ }
<style>
    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        color: black;
    }

    .required:after {
        content: " *";
        color: red;
    }
</style>
<div class="container">
    <div class="card">
        <div class="card-header bg-gradient-lightblue">
            <h3 class="card-title" style="font-weight:bold">Add Qty</h3>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">

                <input type="hidden" asp-for="AircratfId" value="@Model.AircratfId" />
                <input type="hidden" asp-for="ImgUrl" value="@Model.ImgUrl" />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="col-md-12 d-flex align-items-stretch flex-column">
                    <div class="card bg-light d-flex flex-fill">
                        <div class="card-header text-muted border-bottom-0">
                            Aircratf Information
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-6 text-center">
                                    <img src="@Model.ImgUrl" alt="user-avatar" width="200" class="img-bordered img-fluid">
                                </div>
                                <div class="col-6">
                                    <h6><b>Code: </b>@Model.Code </h6>
                                    <h6><b>Name: </b>@Model.Name </h6>
                                    <h6><b>Category: </b>@Model.Category </h6>
                                    <h6><b>Price: </b>Rs. @Model.Price </h6>

                                    <div class="row">
                                        <div class="col-md-3">
                                            <label class="required" asp-for="Qty">Quantity</label>
                                        </div>
                                        <div class="col-md-9">
                                            <input type="number" asp-for="Qty" class="form-control" />
                                            <span asp-validation-for="Qty" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">

                                <div class="row">
                                    <div class="col">
                                    
                                        <button type="submit" class="btn btn-warning form-control">Update Qty</button> 

                                    </div>
                                    <div class="col">
                                        <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>




            </form>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}